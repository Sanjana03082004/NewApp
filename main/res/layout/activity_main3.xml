<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/appIconImageView"
        android:layout_width="266dp"
        android:layout_height="253dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/splashscreen" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="345dp"
        android:layout_height="107dp"
        android:layout_below="@id/appIconImageView"
        android:layout_alignStart="@+id/appIconImageView"
        android:layout_alignEnd="@+id/appIconImageView"
        android:layout_marginStart="-31dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-48dp"
        android:fontFamily="sans-serif-medium"
        android:text="As an app focusing on screen time and digital wellbeing, ActionDash access app usage data through Android's usage permission. It can also access website usage, ad, and shopping data if our accessibility service is enabled."
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_below="@id/titleTextView"
        android:layout_alignEnd="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="sans-serif-medium"
        android:text="This data is used to enable our statistics and blocking features, even when the app is closed."
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/termsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTextView"
        android:layout_alignStart="@+id/descriptionTextView"
        android:layout_alignEnd="@+id/descriptionTextView"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="-14dp"
        android:layout_marginEnd="-6dp"
        android:text="I accept ActionDash's Terms of Service and Privacy Policy."
        android:textSize="16sp" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="178dp"
        android:layout_height="66dp"
        android:layout_below="@id/termsCheckBox"
        android:layout_alignEnd="@+id/termsCheckBox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="215dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/greenbuttongradient"
        android:text="CONTINUE"
        android:textColor="@android:color/white" />

</RelativeLayout>